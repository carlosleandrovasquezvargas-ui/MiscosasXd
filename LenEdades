using System;
using System.Collections.Generic;

namespace Len
{
    internal class Program
    {
        public class Per
        {
            public string name { get; set; }
            public int age { get; set; }

            public Per(string nombre, int edad)
            {
                this.name = name;
                this.age = age;
            }
        }
        static void Main(string[] args)
        {
            int CanP = RN("Cuantas personas vas a contabilizar: ");

            Proceso(CanP);

            Console.WriteLine("\nPresiona cualquier tecla para salir...");
            Console.ReadKey();
        }

        public static int LeerNum (String error)
        {
            int res;
            while (true)
            {
                string entrada = Console.ReadLine();
                if (int.TryParse(entrada, out resultado) && resultado > 0)
                {
                    return resultado;
                }
                Console.WriteLine("Ingrese un valor valido");
            }
        }

        public static void Proceso(int CanP)
        {
            if (CanP == 1)
            {
                One();
            }
            else
            {
                Lot(CanP);
            }
        }

        public static void One()
        {
            int AgeP = RN("Ingresa la edad de la persona: ");
            Console.Write("Ingresa el nombre de la persona: ");
            string NameP = Console.ReadLine();
            if (AgeP >= 18)
            {
                Console.WriteLine($"\nTu persona es:\n{NameP} de {AgeP} años, es mayor de edad");
            }
            else
            {
                Console.WriteLine($"\nTu persona es:\n{NameP} de {AgeP} años, es menor de edad");
            }
        }

        public static void Lot(int CanP)
        {
            string NameP;
            List<Per> Ma = new List<Per>();
            List<Per> me = new List<Per>();



            for (int i = 0; i < CanP; i++)
            {
                int age = RN("Ingresa la edad de la persona " + (i + 1) + ": ");
                Console.Write("Introduce el nombre de la persona " + (i + 1) + ": ");
                String name = Console.ReadLine();
                Console.WriteLine("");

                Per NewP = new Per(name, age);
                if (age >= 18)
                {
                    Ma.Add(NewP);
                }
                else
                {
                    me.Add(NewP);
                }
            }

            foreach (Per Per in Ma)
            {
                Console.WriteLine($"{Per.name} quien tiene {Per.age} años");
            }

            Console.WriteLine("----Todas las personas fueron----");
            foreach (Per per in mayores)
            {
                Console.WriteLine($"{personas.name} quien tiene {Per.age} años");
            }
            foreach (Per Per in menores)
            {
                Console.WriteLine($"{Per.name} quien tiene {Per.age} años");
            }

            if (mayores.Count > 0)
            {
                Console.WriteLine("----Tus personas mayores fueron----");
                foreach (Per Per in Ma)
                {
                    Console.WriteLine($"{Per.name} quien tiene {Per.age} años");
                }

            }

            if (menores.Count > 0)
            {
                Console.WriteLine("\n----Tus personas menores fueron----");
                foreach (Per Per in me)
                {
                    Console.WriteLine($"{Per.name} quien tiene {Per.age} años");
                }
            }
        }
    }
}
